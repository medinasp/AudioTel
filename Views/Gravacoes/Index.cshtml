@model IEnumerable<AudioTel.Models.Gravacoes>

@{
    ViewData["Title"] = "Index";
}

<h2>
    Gravações<a href="@Url.Action("Create")" class="btn text-primary" data-toggle="tooltip" data-placement="right">
        <i class="bi bi-plus-circle-fill" style="font-size: 1.5rem; color:deepskyblue"></i>
    </a>
</h2>
<table class="table table-responsive table-sm table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeDoArquivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ramal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDoArquivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ramal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="bi bi-pencil" style="font-size: 1.10rem"></a> |
                <a asp-action="Details" asp-route-id="@item.Id"class="bi bi-file-text" style="font-size: 1.10rem"></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"class="bi bi-trash danger" style="font-size: 1.10rem; color:red"></a>
            </td>
        </tr>
}
    </tbody>
</table>
